{
  "JwtSettings": {
    "Issuer": "ProjectPulse",
    "Audience": "ProjectPulseUsers",
    "Secret": "VeryStrongSecretKeyForJwtTokenHere12345"
  },
  "PasswordOptions": {
    "SaltSize": 16,
    "HashSize": 32,
    "Iterations": 10000,
    "Algorithm": "HMACSHA256"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AzureBlob": "<你的-blob-connection-string>"
  },
  "BlobStorage": {
    "DefaultContainer": "attachments",
    "PublicAccess": "None",
    "ChunkSize": 4194304
  },
  "ApplicationInsights": {
    "ConnectionString": "<YOUR_INSTRUMENTATION_KEY_OR_CONNECTION_STRING>"
  },
  "DatabaseSettings": {
    "ConnectionString": "...",
    "MaxRetryCount": 3,
    "CommandTimeoutSeconds": 30,
    "EnableSensitiveDataLogging": false,
    "MaxRetryDelaySeconds": 5
  },
  "Redis": {
    "ConnectionString": "...",
    "InstanceName": "ProjectPulse_",
    "LockExpiry": "00:00:05",
    "LockWait": "00:00:10",
    "LockRetry": "00:00:00.200"
  }
}